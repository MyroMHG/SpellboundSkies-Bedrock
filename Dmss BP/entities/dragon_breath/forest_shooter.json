{
  "format_version": "1.21.0",
  "minecraft:entity": {
    "description": {
      "identifier": "dmss:forest_shooter",
      "is_spawnable": false,
      "is_summonable": true
    },
    "component_groups": {
      "ranged":{
        "minecraft:behavior.fire_at_target": {
          "projectile_def": "dmss:forest_shoot",
          "priority": 0,
          "attack_range": [0,20],
          "attack_cooldown": 0,
          "pre_shoot_delay": 0.25,
          "post_shoot_delay": 1.25,
          "ranged_fov": 90,
          "owner_anchor": 0,
          "owner_offset": [0,0,0],
          "target_anchor": 0,
          "target_offset": [0,0.2,0]
        }
      },
      "despawn":{
        "minecraft:instant_despawn": {}
      }
    },
    "components": {
        "minecraft:environment_sensor": {
            "triggers": [
                {
                    "filters": {"test": "is_riding","subject": "self","value": false},
                    "event": "on_dismount"
                }
            ]
        },
        "minecraft:target_nearby_sensor": {
          "inside_range": 5,
          "outside_range": 6,
          "must_see": true,
          "on_inside_range": {
            "event": "melee",
            "target": "self"
          },
          "on_outside_range": {
            "event": "ranged",
            "target": "self"
          }
        },
      "minecraft:fire_immune": true,
      "minecraft:persistent": {},
      "minecraft:knockback_resistance": {
        "value": 70,
        "max": 80
      },
      "minecraft:health": {
        "value": 1,
        "max": 1
      },
      "minecraft:collision_box": {
        "width": 0.1,
        "height": 0.1
      },
      "minecraft:breathable": {
        "totalSupply": 15,
        "breathesWater": true,
        "suffocateTime": 0
      },
      "minecraft:damage_sensor": {
        "triggers": [
          {
            "cause": "all",
            "deals_damage": false
          }
        ]
      },
      "minecraft:behavior.look_at_target": {
        "priority": 3,
        "look_distance": 20,
        "probability": 0.9,
        "look_time": [1,5]
      },
      "minecraft:behavior.nearest_attackable_target": {
        "priority": 0,
        "entity_types": [
          {
            "filters": {
              "all_of": [
                {
                  "test": "is_family",
                  "subject": "other",
                  "value": "monster"
                }
              ]
            },
            "within_default": 30
          }
        ],
        "within_radius": 30,
        "scan_interval": 20,
        "attack_interval": 0,
        "reselect_targets": true,
        "must_see": true,
        "must_reach": false
      }
    },
    "events": {
        "on_dismount":{"add":{"component_groups":["despawn"]}},
      "ranged":{
        "add":{"component_groups":["ranged"]}
      },
      "melee":{
        "remove":{"component_groups":["ranged"]}
      }
    }
  }
}